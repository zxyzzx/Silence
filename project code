#include <Servo.h>
#include <DFPlayer_Mini_Mp3.h>
#include <SoftwareSerial.h>
SoftwareSerial mySoftwareSerial(10, 11); 
#define MOTOR_PIN  6
#define trigPin  7             
#define echoPin  8
//#define LED_PIN 12
int button1 = 2;                
int button2 = 4;

int flag = 1;                  
int timec = 0;
int part = 0;
int flag2 = 0;



void setup(){
Serial.begin(9600);  
mySoftwareSerial.begin(9600);   
mp3_set_serial (mySoftwareSerial);
mp3_set_volume(10); 
pixels.begin();
          
     //FastLED.addLeds<WS2812B, LED_PIN, GRB>(leds, NUM_LEDS);
     //FastLED.setBrightness(170);
     pinMode(LED_PIN, OUTPUT); 
     
pinMode(MOTOR_PIN,OUTPUT);       
pinMode(button1,INPUT_PULLUP);  
pinMode(button2,INPUT_PULLUP);
pinMode(trigPin, OUTPUT);
pinMode(echoPin, INPUT);
digitalWrite(trigPin, LOW);

//analogWrite(MOTOR_PIN,150);
}


void loop(){ 
  
        Serial.print(digitalRead(button1));
        Serial.println(digitalRead(button2));
     
     if(digitalRead(button1)==LOW){
        delay(5);
         if(digitalRead(button1)==LOW){
                flag=!flag;
                while(digitalRead(button1)==LOW);
                }
       }
     
     if(flag==1){
               digitalWrite(trigPin, HIGH);
               delayMicroseconds(10);
               digitalWrite(trigPin, LOW);
 
               unsigned long duration = pulseIn(echoPin, HIGH, 30000); 
               float distance = duration * 0.034 / 2; 
     
               Serial.print("Distance:");
               Serial.print(distance);
               Serial.println(" cm");
  
  
  if(part<2){
       
        if(distance>20 && part==0) {
                mp3_play(1);    
                part=1;
                 }
        else if(distance<20 && part==1){
                mp3_stop();
                part=0;
                timec=millis();
                 }
 
      if(part==0){
             if((millis()-timec)>10000)part=2;
                }
             
              }
  

  if(part==2){
      
      if(flag2==0){ 
                mp3_play(2);    
                flag2=1;
                  }
      if(digitalRead(button2)==HIGH){  
                analogWrite(MOTOR_PIN,30);
                //digitalWrite(LED_PIN, HIGH)ï¼›
                  }
      else{
          analogWrite(MOTOR_PIN,0);
                  }
  
              }  
  
              }
  
     else{                   
          mp3_stop();  
          analogWrite(MOTOR_PIN,0);
          part=0;  
          flag2=0;
}


}
